<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stone_light">

    <!-- Dirty toolbar elevation -->
    <carbon.widget.LinearLayout
        android:id="@+id/find_toolbar_elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:carbon_elevation="6dp">

        <!-- Toolbar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/find_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/night_normal"
            android:elevation="0dp" />
    </carbon.widget.LinearLayout>

    <carbon.widget.ScrollView
        android:id="@+id/find_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_toolbar_elevation"
        app:carbon_overScroll="ifContentScrolls">
        <!-- Stepper -->
        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Section picture -->
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <carbon.widget.TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_circle"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="@color/frost"
                    android:textSize="12sp"
                    app:carbon_fontPath="Roboto-Regular.ttf" />

                <carbon.widget.TextView
                    android:id="@+id/find_picture_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/find_step_picture_title"
                    android:textColor="@color/stone_dark"
                    android:textSize="14sp"
                    app:carbon_fontPath="Roboto-Medium.ttf"
                    app:carbon_rippleColor="@color/ice" />

            </carbon.widget.LinearLayout>

            <carbon.widget.RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="184dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/wire" />

                <carbon.widget.FrameLayout
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    android:layout_centerInParent="true"
                    android:padding="24dp">

                    <carbon.widget.ImageView
                        android:id="@+id/find_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/rose_normal"
                        android:clickable="true"
                        android:scaleType="center"
                        android:src="@drawable/ill_picture"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                    <carbon.widget.TextView
                        android:id="@+id/find_picture_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/night_normal"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="16dp"
                        android:singleLine="true"
                        android:textSize="35sp"
                        android:visibility="gone"
                        app:carbon_fontPath="Roboto-Medium.ttf"
                        app:carbon_inAnimation="pop"
                        app:carbon_outAnimation="pop"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                </carbon.widget.FrameLayout>

            </carbon.widget.RelativeLayout>

            <!-- Section password -->
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <carbon.widget.TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_circle"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="2"
                    android:textColor="@color/frost"
                    android:textSize="12sp"
                    app:carbon_fontPath="Roboto-Regular.ttf" />

                <carbon.widget.TextView
                    android:id="@+id/find_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/find_step_password_title"
                    android:textColor="@color/stone_dark"
                    android:textSize="14sp"
                    app:carbon_fontPath="Roboto-Medium.ttf"
                    app:carbon_rippleColor="@color/ice" />

            </carbon.widget.LinearLayout>

            <carbon.widget.RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="184dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/wire" />

                <carbon.widget.FrameLayout
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    android:layout_centerInParent="true"
                    android:padding="24dp">

                    <carbon.widget.ImageView
                        android:id="@+id/find_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/night_normal"
                        android:clickable="false"
                        android:scaleType="center"
                        android:src="@drawable/ill_password"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                    <carbon.widget.TextView
                        android:id="@+id/find_password_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/night_normal"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="16dp"
                        android:singleLine="true"
                        android:textSize="35sp"
                        android:visibility="gone"
                        app:carbon_fontPath="Roboto-Medium.ttf"
                        app:carbon_inAnimation="pop"
                        app:carbon_outAnimation="pop"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                </carbon.widget.FrameLayout>

            </carbon.widget.RelativeLayout>

            <!-- Section ext -->
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <carbon.widget.TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_circle"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@color/frost"
                    android:textSize="12sp"
                    app:carbon_fontPath="Roboto-Regular.ttf" />

                <carbon.widget.TextView
                    android:id="@+id/find_ext_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/find_step_ext_title"
                    android:textColor="@color/stone_dark"
                    android:textSize="14sp"
                    app:carbon_fontPath="Roboto-Medium.ttf"
                    app:carbon_rippleColor="@color/ice" />

            </carbon.widget.LinearLayout>

            <carbon.widget.RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="184dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/wire" />

                <carbon.widget.FrameLayout
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    android:layout_centerInParent="true"
                    android:padding="24dp">

                    <carbon.widget.ImageView
                        android:id="@+id/find_ext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/night_normal"
                        android:clickable="false"
                        android:scaleType="center"
                        android:src="@drawable/ill_file"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                    <carbon.widget.TextView
                        android:id="@+id/find_ext_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/night_normal"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="16dp"
                        android:singleLine="true"
                        android:textSize="35sp"
                        android:visibility="gone"
                        app:carbon_fontPath="Roboto-Medium.ttf"
                        app:carbon_inAnimation="pop"
                        app:carbon_outAnimation="pop"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                </carbon.widget.FrameLayout>

            </carbon.widget.RelativeLayout>

            <!-- Section share -->
            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <carbon.widget.TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_circle"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="4"
                    android:textColor="@color/frost"
                    android:textSize="12sp"
                    app:carbon_fontPath="Roboto-Regular.ttf" />

                <carbon.widget.TextView
                    android:id="@+id/find_share_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="@string/find_step_share_title"
                    android:textColor="@color/stone_dark"
                    android:textSize="14sp"
                    app:carbon_fontPath="Roboto-Medium.ttf"
                    app:carbon_rippleColor="@color/dust" />

            </carbon.widget.LinearLayout>

            <carbon.widget.RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="184dp">

                <carbon.widget.FrameLayout
                    android:layout_width="184dp"
                    android:layout_height="184dp"
                    android:layout_centerInParent="true"
                    android:padding="24dp">

                    <carbon.widget.ImageView
                        android:id="@+id/find_share"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/night_normal"
                        android:clickable="false"
                        android:scaleType="center"
                        android:src="@drawable/ill_share"
                        app:carbon_rippleColor="@color/ice"
                        app:carbon_rippleStyle="over" />

                </carbon.widget.FrameLayout>

            </carbon.widget.RelativeLayout>


        </carbon.widget.LinearLayout>

    </carbon.widget.ScrollView>

</carbon.widget.RelativeLayout>